<resources>

    <attr format="reference" name="cardStyle"/>
    <attr format="reference" name="addButtonStyle"/>
    <attr format="reference" name="refreshButtonStyle"/>
    <attr format="reference" name="editCloseButtonStyle"/>
    <attr format="reference" name="addCloseButtonStyle"/>
    <attr format="reference" name="addUserCardStyle"/>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/slate</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/skyblue</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/coffee</item>
    </style>

    <style name="DarkAppTheme" parent="android:ThemeOverlay.Material.Dark">

    </style>

    <style name="AppTheme.COFFEE.LIGHT" parent="@android:style/Theme.Material.Light">
        <item name="android:colorPrimary">@color/turquoise</item>
        <item name="android:titleTextColor">@color/white</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/pine</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/coffee</item>
        <item name="android:navigationBarColor">@color/turquoise_A60</item>
        <item name="cardStyle">@style/CardViewStyle.COFFEE</item>
        <item name="refreshButtonStyle">@style/RefreshButton.COFFEE</item>
        <item name="editCloseButtonStyle">@style/EditCloseButton.COFFEE</item>
        <item name="addCloseButtonStyle">@style/AddCloseButton.COFFEE</item>
        <item name="addButtonStyle">@style/AddButton</item>
        <item name="addUserCardStyle">@style/AddUserCardViewStyle.COFFEE</item>
        <item name="android:indeterminateTint">@color/skyblue</item>
        <item name="android:textColorPrimary">@color/slate</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorHint">@color/granite</item>

    </style>

    <style name="AppTheme.COFFEE.DARK" parent="@android:style/Theme.Material">
        <item name="android:colorPrimary">@color/pine</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/slate</item>
        <item name="android:titleTextColor">@color/white</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/skyblue</item>
        <item name="cardStyle">@style/CardViewStyle.DARK</item>
        <item name="android:indeterminateTint">@color/skyblue</item>
        <item name="addButtonStyle">@style/AddButton</item>
        <item name="refreshButtonStyle">@style/RefreshButton.COFFEE</item>
        <item name="editCloseButtonStyle">@style/EditCloseButton.DARK</item>
        <item name="addCloseButtonStyle">@style/AddCloseButton.COFFEE</item>
        <item name="addUserCardStyle">@style/AddUserCardViewStyle.COFFEE</item>
        <item name="android:textColorPrimary">@color/slate</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorHint">@color/granite</item>

    </style>

    <style name="AppTheme.REDSAND" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">@color/cherry</item>
        <item name="android:titleTextColor">@color/white</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/red</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/tomato</item>
        <item name="android:navigationBarColor">@color/cherry</item>
        <item name="cardStyle">@style/CardViewStyle.REDSAND</item>
        <item name="addButtonStyle">@style/AddButton</item>
        <item name="refreshButtonStyle">@style/RefreshButton.REDSAND</item>
        <item name="editCloseButtonStyle">@style/EditCloseButton.REDSAND</item>
        <item name="addCloseButtonStyle">@style/AddCloseButton.REDSAND</item>
        <item name="addUserCardStyle">@style/AddUserCardViewStyle.REDSAND</item>
        <item name="android:buttonStyle">@style/ButtonColor.REDSAND</item>
        <item name="android:indeterminateTint">@color/peach</item>
        <item name="android:textColorPrimary">@color/grey</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorHint">@color/granite</item>

    </style>


    <style name="CardViewStyle.COFFEE" parent="CardView">
        <item name="cardBackgroundColor">@color/latte</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CardViewStyle.REDSAND" parent="CardView">
        <item name="cardBackgroundColor">@color/peach</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CardViewStyle.DARK" parent="CardView">
        <item name="cardBackgroundColor">@color/ceramic</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AddUserCardViewStyle.COFFEE" parent="CardView">
        <item name="cardBackgroundColor">@color/skyblue</item>
        <item name="android:textColor">@color/slate</item>
    </style>
    <style name="AddUserCardViewStyle.REDSAND" parent="CardView">
        <item name="cardBackgroundColor">@color/cherry</item>
        <item name="android:textColor">@color/slate</item>
    </style>


    <style name="AddButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/skyblue</item>
        <item name="android:tooltipText">@string/add_user</item>
    </style>
    <style name="AddCloseButton.REDSAND" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/cherry</item>
    </style>
    <style name="AddCloseButton.COFFEE" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/skyblue</item>

    </style>


    <style name="RefreshButton.REDSAND" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/tomato</item>
        <item name="android:tooltipText">@string/update_users</item>
    </style>
    <style name="RefreshButton.COFFEE" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/pine</item>
        <item name="android:tooltipText">@string/add_user</item>
    </style>

    <style name="EditCloseButton.COFFEE" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/latte</item>
    </style>
    <style name="EditCloseButton.REDSAND" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/peach</item>
    </style>
    <style name="EditCloseButton.DARK" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/ceramic</item>
    </style>

    <style name="ButtonColor.COFFEE" parent="@android:style/Widget.Button">
        <item name="android:backgroundTint">@color/turquoise_A60</item>
        <item name="android:minWidth">24dp</item>
    </style>
    <style name="ButtonColor.REDSAND" parent="@android:style/Widget.Button">
        <item name="android:backgroundTint">@color/tomato</item>
        <item name="android:minWidth">40dp</item>
    </style>

    <style name="ShowCaseText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="ShowCaseDescription" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="CustomShowcaseMaterial" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">@color/turquoise_A60</item>
        <item name="sv_showcaseColor">@color/turquoise_A30</item>
        <item name="sv_titleTextAppearance">@style/ShowCaseText</item>
        <item name="sv_detailTextAppearance">@style/ShowCaseDescription</item>
        <item name="sv_buttonBackgroundColor">@color/latte</item>
        <item name="sv_buttonForegroundColor">@color/white</item>
    </style>

    <style name="ShowcaseButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/latte</item>
    </style>


</resources>
